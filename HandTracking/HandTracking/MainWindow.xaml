<Window x:Class="HandTracking.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000"
        Closed="MainWindow_OnClosed"
        KeyDown="MainWindow_OnKeyDown">


    <StackPanel>
        <DockPanel DockPanel.Dock="Top">
            <Menu DockPanel.Dock="Top" Height="20">
                <MenuItem Header="_File">
                    <MenuItem Header="_Open"/>
                    <MenuItem Header="_Close" Click="Quit_Experiment"/>
                    <MenuItem Header="_Save"/>
                </MenuItem>
            </Menu>
        </DockPanel>
        <Image Height="448"></Image>
        <StackPanel x:Name="control_buttons" Width="374" Orientation="Horizontal" HorizontalAlignment="Center" Margin="309,50,309,0">
            <Button x:Name="stop_button" Content="Stop" Width="125" Click="Stop_button_OnClick"/>
            <Button x:Name="start_button" Content="Start" Width="125" Click="Start_button_OnClick"/>
            <Button x:Name="pause_button" Content="Pause" Width="125"/>
        </StackPanel>
    </StackPanel>
</Window>
